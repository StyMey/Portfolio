{% extends 'base.html.twig' %}

{% block title %}Modifier un skill{% endblock %}

{% block body %}
<div class="cont-ns">
    <div class="container-ns">
        <h1 class="h1-skills">Modifier un skill<h1>

        {{ form_start(formSkills) }}

        <div class="form-group">
            {{ form_label(formSkills.name) }}
            {{ form_widget(formSkills.name) }}
            <div class="form-error">
                <h4>{{ form_errors(formSkills.name) }}</h4>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(formSkills.cathegory) }}
            {{ form_widget(formSkills.cathegory) }}            
        </div>
        <div class="form-group">
            {{ form_row(formSkills.submit) }}
        </div>

        {{ form_end(formSkills) }}

    </div>
</div>
{% endblock %}